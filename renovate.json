{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config#2.6.0",
    "github>aquaproj/aqua-renovate-config:installer-script#2.6.0(Makefile)"
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ],
    "automerge": true,
    "automergeStrategy": "rebase"
  },
  "packageRules": [
    {
      "matchPackageNames": ["aquaproj/aqua-registry"],
      "extends": ["schedule:earlyMondays"],
      "automerge": true
    },
    {
      "matchFileNames": ["aqua/aqua.yaml"],
      "groupName": "aqua cli varsion manager",
      "automerge": true
    },
    {
      "matchFileNames": ["renovate.json"],
      "groupName": "renovate configuration",
      "automerge": true
    },
    {
      "matchManagers": ["regex"],
      "matchFileNames": ["Makefile"],
      "groupName": "aqua installer",
      "automerge": true
    },
    {
      "matchManagers": ["github-action"],
      "groupName": "GitHub Actions manifest",
      "automerge": true
    }
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true
}
