{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "enabled": false
    },
    {
      "matchPackageNames": ["nix"],
      "enabled": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"],
    "automerge": true,
    "automergeStrategy": "rebase"
  },
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true
}
